@model ProductModel

<h1>Dodaj nowy produkt</h1>


<form method="POST" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name">Nazwa</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="d-flex">
        <div class="form-group w-50 mr-3">
            <label asp-for="Price">Cena</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-check w-50 ml-3">
            <input asp-for="IsVisible" class="form-check-input" />
            <label asp-for="IsVisible" class="form-check-label">Czy ma być widoczny?</label>
        </div>
    </div>
    

    <!--
    <div class="form-check">
        <input type="file" asp-for="ProductImage" class="form-check-input" />
        <label asp-for="ProductImage" class="form-check-label">Upload file</label>
    </div>
        -->

    <div class="form-group">
        <input type="submit" value="Dodaj nowy produkt" />
    </div>
</form>